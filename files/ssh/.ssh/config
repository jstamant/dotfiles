# Automatically add keys to eliminate future passphrase-use
AddKeysToAgent yes
# Requires identity files to be specified rather than automatically
# retrieved from the ssh-agent
IdentitiesOnly yes

# For personal account
Host github.com
     User git
     Hostname github.com
     IdentityFile ~/.ssh/id_ed25519

# For work account
# git@github.com-1life:1Life-Workplace-Safety-Solutions/1Life.git
Host gh-1life
     User git
     Hostname github.com
     IdentityFile ~/.ssh/id_ed25519_1life
